<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <Button
        android:id="@+id/aracyonetimbtn"
        android:layout_width="357dp"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:background="@drawable/homepagebutton"
        android:onClick="aracyonetimbtnClick"
        android:text="Araç Yönetimi"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="107dp" />

    <Button
        android:id="@+id/istekbtn"
        android:layout_width="357dp"
        android:layout_height="142dp"
        android:layout_below="@+id/aracyonetimbtn"
        android:layout_alignStart="@+id/aracyonetimbtn"
        android:layout_alignLeft="@+id/aracyonetimbtn"
        android:layout_alignEnd="@+id/aracyonetimbtn"
        android:layout_alignRight="@+id/aracyonetimbtn"
        android:layout_gravity="center"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/homepagebutton"
        android:onClick="istekbtnClick"
        android:text="İstek Talep Oluştur"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="107dp" />

    <Button
        android:id="@+id/profilyonetimbtn"
        android:layout_width="357dp"
        android:layout_height="142dp"
        android:layout_below="@+id/istekbtn"
        android:layout_alignStart="@+id/aracyonetimbtn"
        android:layout_alignLeft="@+id/aracyonetimbtn"
        android:layout_alignEnd="@+id/istekbtn"
        android:layout_alignRight="@+id/istekbtn"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/homepagebutton"
        android:onClick="profilyonetimbtnClick"
        android:text="Profil Yönetimi"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="107dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="147dp"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="137dp"
        android:layout_marginRight="137dp"
        android:layout_marginBottom="0dp"
        android:text="Ana Sayfa"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>